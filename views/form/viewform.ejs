  <!-- external css -->
  <link rel="stylesheet" type="text/css" href="<%= app_url %>/css/updatednavbar.css">
  <link rel="stylesheet" href="<%= app_url %>/css/h-homepage.css">
  <!-- <link rel="stylesheet" href="css/h-slider.css"> -->
  <link rel="stylesheet" href="<%= app_url %>/css/h-services.css">
  <link rel="stylesheet" href="<%= app_url %>/css/h-testimonial.css">
  <link rel="stylesheet" href="<%= app_url %>/css/hBgEvent.css">
  <link rel="stylesheet" href="<%= app_url %>/css/form.css">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- <link rel="stylesheet" href="css/blog.css"> -->
  <script type="text/javascript" src="<%= app_url %>/js/jquery-3.2.1.min.js"></script>

</head>

<body>
  <% console.log(app_url ) %>
  <%- include('../partials/navbar.ejs') %>
  <div class="homeimg">
    <br> <br>

    <div class="container bgSBig">
      <div class="row align-items-center" style="border:  0px solid rgb(0, 204, 255);">
        <form data-id="<%= id%>" class="form_<%= id%>">

          <div class="card">
            <div class="card-body">
              <!-- <h4>Form Title</h4> -->
              <h4><%= title %></h4>
            </div>
          </div>
          <% if(status == "active"){ %>

          <% for(var i=0; i<form_fields.length; i++) {%>
          <% if(form_fields[i].type == "email"){ %>
          <div class="card mt-3">
            <div class="card-body">
              <div class="mb-2 form-group" data-type="email" data-index="<%=i%>">
                <label class="form-label"><%= form_fields[i].question %></label>
                <input type="email" class="form-control" placeholder="<%= form_fields[i].placeholder %>">
              </div>
            </div>
          </div>
          <% } %>

          <% if(form_fields[i].type == "short_text"){ %>
          <div class="card mt-3">
            <div class="card-body">
              <div class="mb-2 form-group" data-type="short_text" data-index="<%=i%>">
                <label class="form-label"><%= form_fields[i].question %></label>
                <input type="text" class="form-control" placeholder="<%= form_fields[i].placeholder %>">
              </div>
            </div>
          </div>
          <% } %>

          <% if(form_fields[i].type == "long_text"){ %>
          <div class="card mt-3">
            <div class="card-body">
              <div class="mb-2 form-group" data-type="long_text" data-index="<%=i%>">
                <label class="form-label"><%= form_fields[i].question %></label>
                <textarea class="form-control" rows="3" placeholder="<%= form_fields[i].placeholder %>"></textarea>
              </div>
            </div>
          </div>
          <% } %>

          <% if(form_fields[i].type == "radio"){ %>
          <div class="card mt-3">
            <div class="card-body">
              <div class="mb-2 form-group" data-type="radio" data-index="<%=i%>">
                <label class=" form-label"><%= form_fields[i].question %></label>
                <div id="form-radio-block-<%=i%>">
                  <% for(var j=0; j<form_fields[i].options.length; j++) {%>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="control" id="<%= 'con_' + i + '_opt_' + j %>" value="<%= form_fields[i].options[j] %>">
                    <label class="form-check-label" for="<%= 'con_' + i + '_opt_' + j %>"><%= form_fields[i].options[j] %></label>
                  </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
          <% } %>

          <% if(form_fields[i].type == "select"){ %>
          <div class="card mt-3">
            <div class="card-body">
              <div class="mb-2 form-group" data-type="select" data-index="<%=i%>">
                <label class="form-label"><%= form_fields[i].question %></label>
                <select id="form-select-block-<%=i%>" class="form-select">
                  <option disabled selected></option>
                  <% for(var j=0; j<form_fields[i].options.length; j++) {%>
                    <option value="<%= form_fields[i].options[j] %>"><%= form_fields[i].options[j] %></option>
                  <% } %>
                </select>
              </div>
            </div>
          </div>
          <% } %>

          <% if(form_fields[i].type == "checkbox"){ %>
          <div class="card mt-3">
            <div class="card-body">
              <div class="mb-2 form-group" data-type="checkbox" data-index="<%=i%>">
                <label class="form-label"><%= form_fields[i].question %></label>
                <div id="form-checkbox-block-<%=i%>">
                  <% for(var j=0; j<form_fields[i].options.length; j++) {%>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="<%= form_fields[i].options[j] %>" id="<%= 'con_' + i + '_opt_' + j %>">
                    <label class="form-check-label" for="<%= 'con_' + i + '_opt_' + j %>"><%= form_fields[i].options[j] %></label>
                  </div>
                  <% } %>

                </div>
              </div>
            </div>
          </div>
          <% } %>
          <% } %>

          <div class="mt-3 mb-3 row">
            <div class="col-6">
              <button id="formSubmitBtn" class="btn btn-primary">Submit</button>
            </div>
            <div class="col-6">
              <button type="button" id="formClearBtn" class="btn btn-secondary">Clear Form</button>

            </div>
          </div>

          <% } else { %>
          <div class="card mt-3">
            <div class="card-body">
              <h6 class="text-center"><%= message %></h6>
            </div>
          </div>
          <% } %>
        </form>

      </div>
    </div>
  </div>
  <script type="text/javascript" src="<%= app_url %>/js/ajax.js"></script>
  <script type="text/javascript" src="<%= app_url %>/js/form.js"></script>

</body>

</html>